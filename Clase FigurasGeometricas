package figuras;

import java.awt.Graphics;
import javax.swing.JPanel;

/**
 *
 * @author BernabéAlejandro
 */
public abstract class FigurasGeometricas extends JPanel {
    /**
     * Atributos de la clase FigurasGeometricas
     */
    String nombre;
    Graphics g;
    /**
     * Constructor de Inicialización
     * @param nombre 
     */
    public FigurasGeometricas(String nombre) {
        this.nombre = nombre;
    }

    /**
     * Métodos abstractos de la clase FigurasGeometricas
     */
    public abstract void Area();
    public abstract void Perimetro();
    public abstract void Grafico();
}
